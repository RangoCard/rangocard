{% extends '@App/base.html.twig' %}

{% block customstylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/libs/bootstrap-datetimepicker.min.css') }}">
{% endblock %}

{% block body_attrs 'class="no-skin"' %}

{% block content %}
    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try{ace.settings.loadState('main-container')}catch(e){}
        </script>
        <div class="main-content">
            <div class="main-content-inner">
                <div class="page-content container">
                    <!--<div class="page-header">
                        <h1>
                            Perfil
                        </h1>
                    </div>-->
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-8 col-edit-cadastro col-edit-cadastro-mobile">
                                    <span class="profile-picture">
                                        <img id="fileSrc" class="img-responsive img-circle" alt="Foto Upload" src="{{ app.user.picSrc ? asset(app.user.picSrc) : asset('assets/images/avatars/default_avatar.png') }}" style="height: 140px" />
                                    </span>
                                    <form name="formUserReg" id="formUserReg" action="{{ path('user_edit') }}" method="post" class="edit-cadastro">
                                        <input type="hidden" id="picture-src" name="picture-src" value="{{ app.user.picSrc }}" class="picture-src">
                                        <div class="col-lg-10 col-xs-12 pull-right p0">
                                            <div class="form-group col-xs-12">
                                                <label>Nome:</label>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="Nome" value="{{ app.user.name }}" required>
                                            </div>
                                            <div class="form-group col-xs-12">
                                                <label>E-mail:</label>
                                                <input type="email" class="form-control" id="email" name="email" value="{{ app.user.email }}" placeholder="E-mail" required>
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-6">
                                                <label>Telefone:</label>
                                                <input type="text" class="form-control" id="phone" name="phone" value="{{ app.user.phone }}" placeholder="Telefone" data-mask="(99) 99999-9999">
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-6">
                                                <label>CPF:</label>
                                                <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" value="{{ app.user.cpf }}" data-mask="999.999.999-99" required>
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-6">
                                                <label>Data nascimento</label>
                                                <input type="text" class="form-control datetime-picker" id="birth" name="birth" value="{{ app.user.birth|date('d-m-Y') }}" data-time-format="dd-mm-yyyy" placeholder="Data nascimento">
                                            </div>
                                            <div class="form-group col-xs-6 col-sm-12 last-form-group">
                                                <label>Nova senha</label>
                                                <input type="password" class="form-control" id="password" name="password" placeholder="Nova senha">
                                            </div>
                                        </div>
                                        {#<div class="form-group col-sm-4 col-xs-12">
                                            <label>CEP:</label>
                                            <input type="text" class="form-control" id="cep" name="cep" value="{{ app.user.cep }}" placeholder="CEP" data-mask="99999-999">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Cidade:</label>
                                            <input type="text" class="form-control" id="city" name="city" value="{{ app.user.city }}" placeholder="Cidade">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Estado:</label>
                                            <input type="text" class="form-control" id="state" name="state" value="{{ app.user.state }}" placeholder="Estado" maxlength="2">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Rua:</label>
                                            <input type="text" class="form-control" id="street" name="street" value="{{ app.user.street }}" placeholder="Rua">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Bairro:</label>
                                            <input type="text" class="form-control" id="district" name="district" value="{{ app.user.district }}" placeholder="Bairro">
                                        </div>#}
                                        <div class="col-xs-12">
                                            <button type="submit" class="btn btn-success">Salvar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include '@App/footer.html.twig' %}
    </div>
{% endblock %}

{% block customjavascripts %}
    <script type="text/javascript">
        var fileUploadUrl = '{{ path('file_upload', {type: 'user'}) }}';
    </script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/moment-ptbr.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/x-editable/bootstrap-editable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/x-editable/ace-editable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/profile-avatar-update.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/jquery.maskedinput.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/user-profile.js') }}"></script>
{% endblock %}