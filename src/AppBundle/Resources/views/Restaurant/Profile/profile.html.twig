{% extends '@App/base.html.twig' %}

{% block content %}
    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try{ace.settings.loadState('main-container')}catch(e){}
        </script>
        <div class="main-content">
            <div class="main-content-inner">
                <div class="page-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-10 col-lg-6 col-edit-cadastro">
                                    <span class="profile-picture profile-picture-rest">
                                        <img id="fileSrc" class="img-responsive img-circle" alt="Foto Upload" src="{{ app.user.picSrc ? asset(app.user.picSrc) : asset('assets/images/avatars/default_avatar.png') }}" style="height: 140px" />
                                    </span>
                                    <form name="formRest" id="formRest" action="{{ path('restaurant_edit') }}" method="post" class="edit-cadastro">
                                        <input type="hidden" id="picture-src img-circle" name="picture-src" value="{{ app.user.picSrc }}" class="picture-src">
                                        <div class="col-xs-12 pull-right p0">
                                            <div class="form-group col-xs-12">
                                                <label>Nome:</label>
                                                <input type="text" class="form-control" id="name" name="name" value="{{ app.user.name }}" placeholder="Nome" required>
                                            </div>
                                            <div class="form-group col-xs-12">
                                                <label>Nome Fantasia:</label>
                                                <input type="text" class="form-control" id="fantasyName" name="fantasyName" value="{{ app.user.fantasyName }}" placeholder="Nome Fantasia">
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-12">
                                                <label>CNPJ:</label>
                                                <input type="text" class="form-control" id="cnpj" name="cnpj" value="{{ app.user.cnpj }}" placeholder="CNPJ" data-mask="99.999.999/9999-99" required>
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-12">
                                                <label>E-mail:</label>
                                                <input type="email" class="form-control" id="email" name="email" value="{{ app.user.email }}" placeholder="E-mail" required>
                                            </div>
                                            <div class="form-group col-sm-4 col-xs-12">
                                                <label>Nova senha:</label>
                                                <input type="password" class="form-control" id="password" name="password" placeholder="Nova senha">
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Site:</label>
                                            <input type="text" class="form-control" id="site" name="site" value="{{ app.user.site }}" placeholder="Site">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Telefone:</label>
                                            <input type="text" class="form-control" id="phone" name="phone" value="{{ app.user.phone }}" placeholder="Telefone" data-mask="(99) 99999-9999">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>WhatsApp:</label>
                                            <input type="text" class="form-control" id="whatsapp" name="whatsapp" value="{{ app.user.whatsapp }}" placeholder="Whatsapp" data-mask="(99) 99999-9999">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>CEP:</label>
                                            <input type="text" class="form-control" id="cep" name="cep" value="{{ app.user.cep }}" placeholder="CEP" data-mask="99999-999">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Cidade:</label>
                                            <input type="text" class="form-control" id="city" name="city" value="{{ app.user.city }}" placeholder="Cidade">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Estado:</label>
                                            <input type="text" class="form-control" id="state" name="state" value="{{ app.user.state }}" placeholder="Estado" maxlength="2">
                                        </div>
                                        <div class="form-group col-sm-8 col-xs-12">
                                            <label>Rua:</label>
                                            <input type="text" class="form-control" id="street" name="street" value="{{ app.user.street }}" placeholder="Rua">
                                        </div>
                                        <div class="form-group col-sm-4 col-xs-12">
                                            <label>Bairro:</label>
                                            <input type="text" class="form-control" id="district" name="district" value="{{ app.user.district }}" placeholder="Bairro">
                                        </div>
                                        <div class="form-group col-xs-12 last-form-group">
                                            <label for="description">Descrição:</label>
                                            <textarea class="form-control" name="description" id="description">{{ app.user.description }}</textarea>
                                        </div>
                                        <div class="col-xs-12">
                                            <button type="submit" class="btn btn-success">Salvar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include '@App/footer.html.twig' %}
    </div>
{% endblock %}

{% block customjavascripts %}
    <script type="text/javascript">
        var fileUploadUrl = '{{ path('file_upload', {type: 'restaurant'}) }}';
    </script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/x-editable/bootstrap-editable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/x-editable/ace-editable.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/profile-avatar-update.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/libs/jquery.maskedinput.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/restaurant-profile.js') }}"></script>
{% endblock %}