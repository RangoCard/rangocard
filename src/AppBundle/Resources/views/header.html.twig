<div class="col-xs-12 bg-topo">
    <div class="col-xs-12 col-sm-9 content-topo p0">
        <div id="navbar" class="navbar navbar-default ace-save-state">
            <div class="navbar-container ace-save-state" id="navbar-container">
                {% if app.user %}
                    <button type="button" class="navbar-toggle menu-toggler pull-right" id="menu-toggler" data-target="#drop-opc">
                        <span class="sr-only">Toggle sidebar</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-header navbar-img pull-left">
                        <div class="nav-user-photo pull-left" style="background: url({{  app.user.picSrc ? asset(app.user.picSrc)|imagine_filter('profile_pic') : asset('assets/images/avatars/no-user.png') }});height: 50px;width: 50px;"></div>
                        <small class="navbar-brand">
                            {{ app.user.name }}
                        </small>
                    </div>
                    <div id="drop-opc" class="navbar-buttons navbar-header pull-right responsive ace-save-state compact" role="navigation">
                        <ul class="nav ace-nav">
                            <li>
                                <a href="{{ isRestaurant() ? path('restaurant_home') : path('user_home') }}" {% if route == 'user_home' or route == 'restaurant_home' %}class="active"{% endif %}><i class="icons-top no-hover icon-home"></i>
                                    home
                                </a>
                            </li>
                            {% if isUser() %}
                                <li class="dropdown-modal">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                        <i class="icons-top no-hover icon-animated-bell icon-notificacao"></i>
                                        <span id="notificationTotal" class="badge badge-important"></span>
                                        Notificação
                                    </a>
                                    <ul class="dropdown-menu-right dropdown-navbar navbar-pink dropdown-menu dropdown-caret dropdown-close">
                                        <li id="notificationListTitle" class="dropdown-header">
                                            <i class="ace-icon fa fa-exclamation-triangle"></i>
                                        </li>
                                        <li class="dropdown-content">
                                            <ul id="notificationList" class="dropdown-menu dropdown-navbar navbar-pink">
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ isRestaurant() ? path('restaurant_profile') : path('user_profile') }}" {% if route == 'user_profile' or route == 'restaurant_profile' %}class="active"{% endif %}><i class="icons-top no-hover icon-perfil"></i>
                                    Perfil
                                </a>
                            </li>
                            <li>
                                <a href="{{ isRestaurant() ? path('logout_restaurant') : path('logout_user') }}"><i class="icons-top no-hover icon-sair"></i>
                                    Sair
                                </a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
